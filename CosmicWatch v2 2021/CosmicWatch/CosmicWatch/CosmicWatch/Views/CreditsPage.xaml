<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CosmicWatch.Views.CreditsPage">

    <!-- Content of the Page -->
    <ContentPage.Content>
        <!-- Scroll View: Allows users to scroll up and down if there's more content. -->
        <ScrollView>
            <!-- StackLayout: Content displayed in a vertical stack -->
            <StackLayout>
                <Frame
                    BackgroundColor="{StaticResource BackgroundTertiary}">
                    <Label 
                    Text="Text Not Loaded."
                    x:Name="MainTextTitle"/>
                </Frame>
                <Label 
                    Text="Text Not Loaded."
                    x:Name="MainTextDisplay"
                    FontSize="15"/>
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>