<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CosmicWatch.Views.DisplayAnalysisPage">
    <!--Navigation Toolbar, Hierarchical Organization-->
    <ContentPage.ToolbarItems>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <!-- Stack Layout: Main Display/Content -->
        <StackLayout Orientation= "Vertical">
            <!-- Picker: Datasets -->
            <Picker x:Name="Datasets"
                    Title="Datasets"
                    TitleColor="White"
                    TextColor="White"
                    FontSize="20" 
                    SelectedIndexChanged="OnDatasetSelect"/>

            <!-- Picker: Display Type -->
            <Picker x:Name="Display_Type"
                    Title="Display Type"
                    TitleColor="White"
                    TextColor="White"
                    FontSize="20"
                    SelectedIndexChanged="OnGraphTypeSelect"/>

            <!-- Stack Layout: Axis Options and Export -->
            <StackLayout Orientation="Horizontal">
                <!-- Picker: X Axis -->
                <Picker x:Name="X_Axis"
                        Title="X Axis"
                        TitleColor="White"
                        TextColor="White"
                        FontSize="20"
                        SelectedIndexChanged="OnXSelect"/>

                <!-- Picker: Y Axis -->
                <Picker x:Name="Y_Axis"
                        Title="Y Axis"
                        TitleColor="White"
                        TextColor="White"
                        FontSize="20"
                        SelectedIndexChanged="OnYSelect"/>

                <!-- Button: Upload Selected File to Google Drive -->
                <Button TextColor="White" 
                        FontSize="16" 
                        Text="Export to Google Drive" 
                        CornerRadius="20"
                        Pressed="OnUploadClick"/>

            </StackLayout>
            <!-- Text: Status Display.-->
            <Label x:Name ="statusDisplay" 
                   Text="" 
                   FontSize="20" 
                   TextColor="White"/>
            <!-- Webview: Graph Display -->
            <WebView BackgroundColor = "#0c164f"  
                     VerticalOptions="EndAndExpand" 
                     HeightRequest="400" 
                     WidthRequest="500">
                <WebView.Source>
                    <HtmlWebViewSource x:Name = "HtmlSource" />
                </WebView.Source>
            </WebView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>